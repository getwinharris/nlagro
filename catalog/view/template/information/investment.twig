{{ header }}
<div id="information-investment" class="container mx-auto px-4 py-16">

    <!-- Page Heading -->
    <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl font-bold text-nnl-green mb-4">Global Venture Investment</h1>
        <h2 class="text-2xl md:text-3xl font-semibold text-nnl-gold">The NNL Sprout-Growth Bond</h2>
        <p class="text-lg text-gray-700 max-w-3xl mx-auto mt-4">
            An opportunity for global investors to participate in India’s high-frequency organic farming revolution. Your capital directly funds rapid-yield crops to meet global wholesale demand.
        </p>
    </div>

    <!-- Investment Tiers -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {% for product in investment_products %}
            <div class="bg-white rounded-lg shadow-xl p-6 border border-nnl-green/20 flex flex-col">
                <h3 class="text-xl font-bold text-nnl-green mb-2">{{ product.name }}</h3>
                <p class="text-4xl font-extrabold text-nnl-green">{{ product.price }}</p>
                
                <div class="my-4 space-y-2">
                    <div class="flex items-center">
                        <i class="fa-solid fa-clock text-nnl-gold w-6"></i>
                        <span class="ml-2 text-gray-800">Duration: 6 Months</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fa-solid fa-leaf text-nnl-gold w-6"></i>
                        <span class="ml-2 text-gray-800">Asset: Organic Sprouts & Spinach</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fa-solid fa-chart-line text-nnl-gold w-6"></i>
                        <span class="ml-2 text-gray-800">Total Return: {{ product.total_return }}</span>
                    </div>
                </div>
                
                <div class="mt-auto">
                    <a href="{{ product.href }}" class="block w-full text-center bg-nnl-gold text-white font-bold text-lg px-6 py-3 rounded-lg hover:bg-opacity-90 transition shadow-lg">
                        Invest Now
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>

    <!-- Referral Program -->
    <div class="mt-16 bg-nnl-green text-white rounded-lg p-8">
        <h3 class="text-2xl font-bold text-center mb-4">Refer & Earn: The 10+2 Model</h3>
        <p class="text-center max-w-2xl mx-auto mb-6">Earn commissions by referring others to the Sprout-Growth Bond program. The more you refer, the more you earn.</p>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 text-center">
            <div class="bg-nnl-green/50 p-4 rounded-lg">
                <p class="text-2xl font-bold text-nnl-gold">₹2,000</p>
                <p class="mt-1 text-sm">Total on ₹10k Plan</p>
            </div>
            <div class="bg-nnl-green/50 p-4 rounded-lg">
                <p class="text-2xl font-bold text-nnl-gold">₹5,000</p>
                <p class="mt-1 text-sm">Total on ₹25k Plan</p>
            </div>
            <div class="bg-nnl-green/50 p-4 rounded-lg">
                <p class="text-2xl font-bold text-nnl-gold">₹10,000</p>
                <p class="mt-1 text-sm">Total on ₹50k Plan</p>
            </div>
            <div class="bg-nnl-green/50 p-4 rounded-lg">
                <p class="text-2xl font-bold text-nnl-gold">₹20,000</p>
                <p class="mt-1 text-sm">Total on ₹1L Plan</p>
            </div>
        </div>
    </div>

</div>
{{ footer }}
