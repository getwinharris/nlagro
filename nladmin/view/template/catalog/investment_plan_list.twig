{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <a href="{{ add }}" data-bs-toggle="tooltip" title="{{ button_add }}" class="btn btn-primary"><i class="fa-solid fa-plus"></i></a>
        <button type="submit" form="form-investment-plan" formaction="{{ delete }}" data-bs-toggle="tooltip" title="{{ button_delete }}" onclick="return confirm('{{ text_confirm }}');" class="btn btn-danger"><i class="fa-regular fa-trash-can"></i></button>
      </div>
      <h1>{{ heading_title }}</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="card">
      <div class="card-header"><i class="fa-solid fa-list"></i> {{ text_list }}</div>
      <div class="card-body">
        <form id="form-investment-plan" action="{{ delete }}" method="post" enctype="multipart/form-data">
          <div class="table-responsive">
            <table class="table table-bordered table-hover">
              <thead>
                <tr>
                  <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);"/></td>
                  <td class="text-start">
                    <a href="{{ sort_name }}" class="{% if sort == 'name' %}{{ order|lower }}{% endif %}">{{ column_name }}</a>
                  </td>
                  <td class="text-end">
                    <a href="{{ sort_price }}" class="{% if sort == 'price' %}{{ order|lower }}{% endif %}">{{ column_price }}</a>
                  </td>
                  <td class="text-end">{{ column_action }}</td>
                </tr>
              </thead>
              <tbody>
                {% if investment_plans %}
                  {% for investment_plan in investment_plans %}
                    <tr>
                      <td class="text-center"><input type="checkbox" name="selected[]" value="{{ investment_plan.investment_plan_id }}"/></td>
                      <td class="text-start">{{ investment_plan.name }}</td>
                      <td class="text-end">{{ investment_plan.price }}</td>
                      <td class="text-end">
                        <a href="{{ investment_plan.edit }}" data-bs-toggle="tooltip" title="{{ button_edit }}" class="btn btn-primary"><i class="fa-solid fa-pencil"></i></a>
                      </td>
                    </tr>
                  {% endfor %}
                {% else %}
                  <tr>
                    <td class="text-center" colspan="4">{{ text_no_results }}</td>
                  </tr>
                {% endif %}
              </tbody>
            </table>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
